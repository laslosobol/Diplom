<div class="home-main">
    <div class="home-popular-block">
        <div class="home-popular-block-text">
            <h1>Оберіть постачальника</h1>
        </div>
        @for (var i = 0; i <= @Model.Count() / 4; i++)
        {
            <div class="home-popular-block-cards-line">
                @if (i * 4 >= Model.Count())
                {
                    break;
                }
                else
                {
                    <div class="home-popular-block-cards-line-card">
                        <a asp-action="GetGoods" asp-route-id="@Model.ToList()[i*4].Id">
                            <img
                                alt=""
                                class=""
                                src="https://static.overlay-tech.com/assets/60260616-5dfb-4e1b-a969-524df5f3512f.png"/>
                        </a>
                    </div>
