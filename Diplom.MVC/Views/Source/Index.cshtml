@model IEnumerable<Diplom.BLL.DTO.SourceDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@if (false)
{
    <h2>title</h2>

    <a asp-action="Create">Add Source</a>

    <table class="table">
        <tr>
            <th>Name</th><th></th>
        </tr>
        @foreach (var source in Model)
        {
            <tr>
                <td>
                    <a asp-action="GetGoods" asp-route-id="@source.Id">@source.Name</a>
                </td>
                @if (User.IsInRole("Customer"))
                {
                    <td>
                        <form asp-action="Delete" asp-route-id="@source.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@source.Id">Update</a>
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                }
            </tr>
        }
    </table>
}

@if (false)
{
    <div class="block-1">
        <h1 class="text-1">Популярні</h1>
        <div class="cards">
            <div class="line">
                @foreach (var source in Model)
                {
                    <a asp-action="GetGoods" asp-route-id="@source.Id">
                        <img
                            alt=""
                            class="tile"
                            src="https://static.overlay-tech.com/assets/60260616-5dfb-4e1b-a969-524df5f3512f.png"/>
                    </a>
                }
            </div>
        </div>
    </div>
}
