@model Diplom.MVC.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@if (false)
{
    <h2>title</h2>
    <h2>Изменение пароля для пользователя</h2>
    <form asp-action="ChangePassword" asp-controller="User">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input id="Id" type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">Старый пароль</label>
            <input type="text" asp-for="OldPassword" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Новый пароль</label>
            <input type="text" asp-for="NewPassword" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default"/>
        </div>
    </form>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Кошик</title>
</head>
<style>
    body {
        background: linear-gradient(89.99deg, #F1D9BC 7.87%, #B8ECDF 91.53%);
        margin: 0;
        padding: 0;
        width: 100%;
    }  
    .profile {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        background: rgba(255, 255, 255, 0.5);
        padding: 80px;
        gap: 8px;
    }
    .profile-block {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0px;
        gap: 36px;
    }
    .profile-block-title {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 700;
        font-size: 36px;
        line-height: 48px;
        width: 100%;
    }
    .profile-block-subtitle {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400;
        font-size: 14px;
        line-height: 20px;
        width: 100%;
    }
    .profile-block-field-outer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding: 0px;
        gap: 16px;
        width: 100%;
    }
    .profile-block-field-subtitle {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 20px;
    }
    .profile-block-field-value {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px;
        gap: 48px;
        
        width: 500px;
        height: 60px;
    }
    .profile-block-field-value {
        
        box-sizing: border-box;
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 20px 36px 20px 24px;
        gap: 16px;
        width: 500px;
        height: 60px;
        background: #FFFFFF;
        border: 2px solid #FFFFFF;
        border-radius: 32px;
    }
    .profile-block-field-value-text {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 20px;
    }
    .profile-block-button-box {
        display: flex;
        flex-direction: row;
        margin-top: 1rem;
        align-items: flex-start;
        padding: 0px;
        gap: 36px;
    }
    .profile-block-button {
        width: 180px;
        height: 60px;
        gap: 8px;
        background: #B3E4D9;
        border-radius: 32px;
    }
</style>
<div class="profile">
    <div class="profile-block">
        <div class="profile-block-title">
            <h1>Змінити пароль</h1>
        </div>
        <form asp-action="ChangePassword" asp-controller="User">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input id="Id" type="hidden" asp-for="Id"/>
            </div>
            <div class="profile-block-field-outer">
                <div class="profile-block-field-subtitle">
                    <h4>Старий пароль</h4>
                </div>
                <input type="password" asp-for="OldPassword" class="profile-block-field-value"/>
            </div>
            <div class="profile-block-field-outer">
                <div class="profile-block-field-subtitle">
                    <h4>Новий пароль</h4>
                </div>
                <input type="password" asp-for="NewPassword" class="profile-block-field-value"/>
            </div>
            <div class="profile-block-button-box">
                <input type="submit" value="Зберегти" class="profile-block-button">
            </div>
        </form>
    </div>
</div>